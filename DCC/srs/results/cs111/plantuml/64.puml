@startuml

package "Client" {
    class UserInterface {
        - guiElements: List<GUIElement>
        - currentCoordinateGroup: CoordinateGroup
        + displayGroups(groups: List<CoordinateGroup>): void
        + getInputData(): Map<String, String>
        + showError(message: String): void
    }
}

package "Server" {
    package "Controller" {
        class CoordinateController {
            + createCoordinateGroup(data: Map<String, String>): void
            + modifyCoordinateGroup(id: int, data: Map<String, String>): void
            + deleteCoordinateGroup(id: int): void
            + viewAllCoordinateGroups(): List<CoordinateGroup>
            + viewCoordinateGroupByLabel(label: String): CoordinateGroup
        }
    }

    package "Model" {
        class CoordinateGroup {
            - id: int
            - timestamp: LocalDateTime
            - label: String
            - cartesianCoordinates: CartesianCoordinates
            - polarCoordinates: PolarCoordinates
            + convertToCartesian(): CartesianCoordinates
            + convertToPolar(): PolarCoordinates
        }

        class CartesianCoordinates {
            - x: double
            - y: double
            + getValues(): Map<String, Double>
        }

        class PolarCoordinates {
            - r: double
            - theta: double
            + getValues(): Map<String, Double>
        }
    }

    package "Database" {
        class CoordinateGroupRepository {
            + save(group: CoordinateGroup): void
            + update(group: CoordinateGroup): void
            + delete(id: int): void
            + findAll(): List<CoordinateGroup>
            + findByLabel(label: String): List<CoordinateGroup>
        }
    }
}

' Relationships
UserInterface --> CoordinateController : uses
CoordinateController --> CoordinateGroupRepository : accesses
CoordinateGroupRepository --> CoordinateGroup : manages
CoordinateGroup *-- CartesianCoordinates : has
CoordinateGroup *-- PolarCoordinates : has

@enduml