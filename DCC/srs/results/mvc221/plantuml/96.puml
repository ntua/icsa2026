@startuml

'==========================
' Model Package
'==========================
package model {
  class CoordinateGroup {
    - id: int
    - timestamp: Date
    - label: String
    - cartesianX: BigDecimal
    - cartesianY: BigDecimal
    - polarR: BigDecimal
    - polarTheta: BigDecimal
    + getId(): int
    + getTimestamp(): Date
    + getLabel(): String
    + setLabel(label: String): void
    + getCartesian(): (BigDecimal, BigDecimal)
    + setCartesian(x: BigDecimal, y: BigDecimal): void
    + getPolar(): (BigDecimal, BigDecimal)
    + setPolar(r: BigDecimal, theta: BigDecimal): void
  }

  class CoordinateGroupDAO {
    + create(coordinateGroup: CoordinateGroup): void
    + update(coordinateGroup: CoordinateGroup): void
    + delete(coordinateGroup: CoordinateGroup): void
    + findAll(): List<CoordinateGroup>
    + findByLabel(label: String): List<CoordinateGroup>
  }

  class DBConnection {
    + getConnection(): Connection
  }

  ' Associations within model package
  CoordinateGroupDAO ..> CoordinateGroup : uses
  CoordinateGroupDAO --> DBConnection : uses
}

'==========================
' View Package
'==========================
package view {
  class MainView {
    + displayCoordinateGroups(groups: List<CoordinateGroup>): void
    + showError(message: String): void
    + getInputCoordinates(): (BigDecimal, BigDecimal)
    + getInputPolarCoordinates(): (BigDecimal, BigDecimal)
    + getLabelInput(): String
    + setController(controller: CoordinateGroupController): void
  }
}

'==========================
' Controller Package
'==========================
package controller {
  class CoordinateGroupController {
    - model: CoordinateGroupDAO
    - view: MainView
    + createCoordinateGroup(label: String, x: BigDecimal, y: BigDecimal): void
    + updateCoordinateGroup(id: int, newLabel: String, x: BigDecimal, y: BigDecimal): void
    + deleteCoordinateGroup(id: int): void
    + viewAllCoordinateGroups(): void
    + viewCoordinateGroupByLabel(label: String): void
    + convertCartesianToPolar(x: BigDecimal, y: BigDecimal): (BigDecimal, BigDecimal)
    + convertPolarToCartesian(r: BigDecimal, theta: BigDecimal): (BigDecimal, BigDecimal)
  }
}

'==========================
' Associations across packages
'==========================
controller.CoordinateGroupController --> model.CoordinateGroupDAO : uses
controller.CoordinateGroupController --> view.MainView : controls
view.MainView --> controller.CoordinateGroupController : interacts

@enduml