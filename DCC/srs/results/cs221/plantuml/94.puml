@startuml

'================ Packages =================
package model {
  class CoordinateGroup {
    - id: int
    - timestamp: Date
    - label: String
    - polar: PolarCoordinate
    - cartesian: CartesianCoordinate
    + getId(): int
    + getTimestamp(): Date
    + getLabel(): String
    + getPolar(): PolarCoordinate
    + getCartesian(): CartesianCoordinate
    + setLabel(label: String): void
    + setPolar(p: PolarCoordinate): void
    + setCartesian(c: CartesianCoordinate): void
  }

  class CartesianCoordinate {
    - x: double
    - y: double
    + getX(): double
    + getY(): double
    + setX(x: double): void
    + setY(y: double): void
  }

  class PolarCoordinate {
    - r: double
    - theta: double
    + getR(): double
    + getTheta(): double
    + setR(r: double): void
    + setTheta(theta: double): void
  }
}

package server {
  class CoordinateGroupService {
    + createCoordinateGroup(label: String, coord: Object): void
    + modifyCoordinateGroup(id: int, newLabel: String, coord: Object): void
    + deleteCoordinateGroup(id: int): void
    + getAllCoordinateGroups(): List<CoordinateGroup>
    + getCoordinateGroupByLabel(label: String): CoordinateGroup
  }

  class Converter {
    + cartesianToPolar(x: double, y: double): PolarCoordinate
    + polarToCartesian(r: double, theta: double): CartesianCoordinate
  }

  class DatabaseAccess {
    + saveCoordinateGroup(cg: CoordinateGroup): void
    + updateCoordinateGroup(cg: CoordinateGroup): void
    + deleteCoordinateGroup(id: int): void
    + retrieveAllCoordinateGroups(): List<CoordinateGroup>
    + retrieveCoordinateGroupByLabel(label: String): CoordinateGroup
  }
}

package client {
  class CoordinateGroupGUI {
    + showCreateForm(): void
    + showModifyForm(): void
    + displayCoordinateGroups(groups: List<CoordinateGroup>): void
    + displayError(message: String): void
  }

  class CoordinateGroupClient {
    - gui: CoordinateGroupGUI
    + start(): void
  }
}

package database {
  class DatabaseConnection {
    - url: String
    - username: String
    - password: String
    + connect(): Connection
    + disconnect(): void
  }
}

'================ Associations =================
model.CoordinateGroup "1" *-- "1" model.PolarCoordinate
model.CoordinateGroup "1" *-- "1" model.CartesianCoordinate

server.CoordinateGroupService ..> server.DatabaseAccess : uses
server.CoordinateGroupService ..> server.Converter : uses

database.DatabaseAccess ..> database.DatabaseConnection : uses

client.CoordinateGroupGUI ..> server.CoordinateGroupService : calls
client.CoordinateGroupGUI ..> model.CoordinateGroup

@enduml