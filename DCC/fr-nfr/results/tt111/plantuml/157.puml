@startuml

package "Presentation Layer" {
  class Frontend {
    - SwingFramework : JFrame
    + createUI() : void
    + handleUserInput() : void
  }
}

package "Logic Layer" {
  class CoordinateGroupManager {
    - coordinateGroups : List<CoordinateGroup>
    + createCoordinateGroup(cartesian: CartesianCoordinates, polar: PolarCoordinates) : CoordinateGroup
    + storeCoordinateGroup(group: CoordinateGroup) : void
    + retrieveCoordinateGroup(label: String) : CoordinateGroup
    + modifyCoordinateGroup(group: CoordinateGroup) : void
    + deleteCoordinateGroup(id: Integer) : void
  }

  class CoordinateConverter {
    - cartesianToPolar(cartesian: CartesianCoordinates) : PolarCoordinates
    - polarToCartesian(polar: PolarCoordinates) : CartesianCoordinates
  }
}

package "Data Layer" {
  class MySQLDatabase {
    - connection : Connection
    + connect() : void
    + disconnect() : void
    + storeCoordinateGroup(group: CoordinateGroup) : void
    + retrieveCoordinateGroup(id: Integer) : CoordinateGroup
    + modifyCoordinateGroup(group: CoordinateGroup) : void
    + deleteCoordinateGroup(id: Integer) : void
  }
}

class CartesianCoordinates {
  - x : Double
  - y : Double
}

class PolarCoordinates {
  - r : Double
  - theta : Double
}

class CoordinateGroup {
  - id : Integer
  - label : String
  - timestamp : Timestamp
  - cartesian : CartesianCoordinates
  - polar : PolarCoordinates
}

CoordinateConverter --|> CoordinateGroupManager
Frontend --* CoordinateGroupManager

MySQLDatabase --* CoordinateGroupManager
CoordinateGroupManager o-- MySQLDatabase
CoordinateGroupManager *-- CoordinateConverter

@enduml