    }
    
class CartesianCoordinateGroup extends AbstractCoordinateGroup {
        private int x;
        private int y;
        
        +int getX();
        +int getY();
        + void setX(int newValue);
        +void setY(int newValue);
    }
    
class PolarCoordinateGroup extends AbstractCoordinateGroup {
        private double r;
        private double theta;
        
        +double getR();
        +double getTheta();
        + void setR(double newValue);
        +void setTheta(double newValue);
    }
}
  
package "Coordinate Conversion" {
    
interface CoordinateConverter{
        abstract double[] convertToCartesian(PolarCoordinateGroup polarCoordinates);
        abstract PolarCoordinateGroup convertToPolar(double[] cartesianCoordinates);
    }
    
class CartesianToPolar implements CoordinateConverter {
        +double[] convertToPolar(double[] cartesianCoordinates)
    }
  
class PolarToCartesian implements CoordinateConverter {
        +double[] convertToCartesian(PolarCoordinateGroup polarCoordinates)
    }
}
 
