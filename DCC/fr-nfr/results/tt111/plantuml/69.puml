package "Coordinate Group" {
    abstract class AbstractCoordinateGroup {
        + String label;
        + timestamp dateCreated;
        
        +String getLabel();
        +Date getTimestamp();
        + void setLabel(String newLabel);
        +void updateTimestamp();
