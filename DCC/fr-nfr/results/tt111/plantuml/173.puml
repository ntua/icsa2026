@startuml
!define DARKBLUE #0072B2

package "Client" {
  class DCCApp {
    + run()
    - selectedCoordinates: CoordinateGroup
  }
  class CoordinateGroupManager {
    + createCoordinateGroup(type: String, coordinates: List<Double>): CoordinateGroup
    + storeCoordinateGroup(group: CoordinateGroup)
    + retrieveCoordinateGroup(label: String): CoordinateGroup
    + retrieveAllCoordinateGroups(): List<CoordinateGroup>
    + updateCoordinateGroup(group: CoordinateGroup)
    + deleteCoordinateGroup(id: Integer)
  }

}

package "Logic Layer" {
  class CoordinateConverter {
    + convertCartesianToPolar(cartesian: CartesianCoordinates): PolarCoordinates
    + convertPolarToCartesian(polar: PolarCoordinates): CartesianCoordinates
  }

  class CoordinateGroup {
    - id: Integer
    - label: String
    - timestamp: Date
    - coordinates: List<Double>
    + getCoordinateType(): String
    + getCoordinatesAsList(): List<Double>
  }
  class CartesianCoordinates
  class PolarCoordinates

}

package "Database" {
  interface DatabaseConnection {
    + connect()
    + disconnect()
    + executeQuery(query: String): ResultSet
  }

  class MySQLDatabaseConnection {
    - host: String
    - port: Integer
    - username: String
    - password: String
    + connect(): void
    + disconnect(): void
    + executeQuery(query: String): ResultSet
  }
}

DCCApp --> CoordinateGroupManager : uses
CoordinateGroupManager --> CoordinateConverter : uses
CoordinateGroupManager --> MySQLDatabaseConnection : uses
MySQLDatabaseConnection --|> DatabaseConnection

@enduml