@startuml
package "Client" {
    class CoordinateConverter {
        - x: HighPrecisionNumber
        - y: HighPrecisionNumber
        + convertToPolar(): PolarCoordinate
        + convertFromPolar(polar: PolarCoordinate): CartesianCoordinate
    }

    class CoordinateGroup {
        - id: UniqueAutoGeneratedIdentifier
        - label: String
        - cartesianCoordinates: CartesianCoordinate[]
        - polarCoordinates: PolarCoordinate[]
        + saveIntoDatabase(database: Database)
        + retrieveFromDatabase(database: Database): CoordinateGroup[]
    }
}

package "Server" {
    class HighPrecisionNumber {
        - value: Double
        + getHighPrecisionValue(): String
    }

    class PolarCoordinate {
        - r: HighPrecisionNumber
        - theta: HighPrecisionNumber
        + getR(): HighPrecisionNumber
        + getTheta(): HighPrecisionNumber
    }

    class CartesianCoordinate {
        - x: HighPrecisionNumber
        - y: HighPrecisionNumber
        + getX(): HighPrecisionNumber
        + getY(): HighPrecisionNumber
    }

    class UniqueAutoGeneratedIdentifier {
        - value: Integer
        + getNextValue(): Integer
    }

    class Database {
        + saveData(data: String)
        + fetchData(query: String): CoordinateGroup[]
    }
}

CoordinateConverter --> CoordinateGroup
HighPrecisionNumber <|-- CartesianCoordinate
HighPrecisionNumber <|-- PolarCoordinate

@enduml