@startuml
'==============================
' Package: User Interface (Swing)
'==============================
package ui {
  class DccMainFrame {
    - controller: controller.DccController
    - coordinateGroupList: List<logic.CoordinateGroup>
    --
    + initComponents(): void
    + addActionListeners(): void
    + displayCoordinateGroups(groups: List<logic.CoordinateGroup>): void
    + filterCoordinateGroups(label: String): void
    + clearFilter(): void
  }
}

'==============================
' Package: Controller
'==============================
package controller {
  class DccController {
    - dao: data.CoordinateGroupDAO
    - converter: logic.CoordinateConverter
    --
    + addCoordinateGroup(label: String, cartesian: logic.CartesianCoordinate): void
    + updateCoordinateGroup(group: logic.CoordinateGroup): void
    + deleteCoordinateGroup(id: int): void
    + getAllCoordinateGroups(): List<logic.CoordinateGroup>
    + filterCoordinateGroups(label: String): List<logic.CoordinateGroup>
  }
}

'==============================
' Package: Business Logic
'==============================
package logic {
  class CartesianCoordinate {
    - x: BigDecimal
    - y: BigDecimal
    --
    + CartesianCoordinate(x: BigDecimal, y: BigDecimal)
    + getX(): BigDecimal
    + getY(): BigDecimal
  }

  class PolarCoordinate {
    - r: BigDecimal
    - theta: BigDecimal
    --
    + PolarCoordinate(r: BigDecimal, theta: BigDecimal)
    + getR(): BigDecimal
    + getTheta(): BigDecimal
  }

  class CoordinateGroup {
    - id: int
    - label: String
    - cartesian: CartesianCoordinate
    - polar: PolarCoordinate
    - timestamp: Date
    --
    + CoordinateGroup(id: int, label: String, cartesian: CartesianCoordinate, polar: PolarCoordinate, timestamp: Date)
    + getId(): int
    + getLabel(): String
    + getCartesian(): CartesianCoordinate
    + getPolar(): PolarCoordinate
    + getTimestamp(): Date
  }

  class CoordinateConverter {
    --
    + convertToPolar(cartesian: CartesianCoordinate): PolarCoordinate
    + convertToCartesian(polar: PolarCoordinate): CartesianCoordinate
  }
}

'==============================
' Package: Data (Persistence)
'==============================
package data {
  class DatabaseConnection {
    - connection: java.sql.Connection
    --
    + getConnection(): java.sql.Connection
  }

  class CoordinateGroupDAO {
    - dbConnection: DatabaseConnection
    --
    + create(group: logic.CoordinateGroup): void
    + readAll(): List<logic.CoordinateGroup>
    + update(group: logic.CoordinateGroup): void
    + delete(id: int): void
  }
}

'==============================
' Associations between packages/classes
'==============================
ui.DccMainFrame --> controller.DccController : "uses"
controller.DccController --> data.CoordinateGroupDAO : "CRUD operations"
controller.DccController --> logic.CoordinateConverter : "conversion"
data.CoordinateGroupDAO --> DatabaseConnection : "uses"
controller.DccController --> logic.CoordinateGroup : "manages"
logic.CoordinateGroup --> CartesianCoordinate : "contains"
logic.CoordinateGroup --> PolarCoordinate : "contains"

@enduml