@startuml
package presentation {
  class Client
}

package business_logic {
  class CoordinateGroupConverter
  class CoordinateGroupValidator
  class CoordinateGroupRepository
}

package data_access {
  class MySQLDatabaseConnection
  class CoordinateGroupDAO
}

package data_model {
  class CartesianCoordinate
  class PolarCoordinate
  class CoordinateGroup
}

presentation.Client o-- business_logic.CoordinateGroupConverter
business_logic.CoordinateGroupConverter ..> data_model.CoordinateGroup
data_model.CoordinateGroup <-- business_logic.CoordinateGroupValidator
business_logic.CoordinateGroupValidator ..> data_access.CoordinateGroupDAO
data_access.CoordinateGroupDAO ..> data_access.MySQLDatabaseConnection

package data_model {
  class CartesianCoordinate {
    - x:highPrecisionNumber
    - y:highPrecisionNumber
  }
  class PolarCoordinate {
    -r:highPrecisionNumber
    -theta:highPrecisionNumber
  }
  class CoordinateGroup {
    - id:autoGeneratedInteger
    -label:string
  }
}

@enduml