@startuml
!include <C4/C4_Context>

title DCC Application - Class Diagram

package "app" {
class DCCModel {
    +coordinateGroups: List<CoordinateGroup>
    +addCoordinateGroup(CoordinateGroup cg): void
    +getCoordinateGroup(int id): CoordinateGroup
    +getCoordinateGroupsByLabel(String label): List<CoordinateGroup>
    +getAllCoordinateGroups(): List<CoordinateGroup>
    +updateCoordinateGroup(CoordinateGroup cg): void
    +deleteCoordinateGroup(int id): void
}

class DCCView {
    +displayCoordinateGroups(List<CoordinateGroup>): void
    +getCoordinateGroupInput(): CoordinateGroup
}

class DCCController {
    -model: DCCModel
    -view: DCCView
    +handleCoordinateGroupCreation(): void
    +handleCoordinateGroupRetrieval(): void
    +handleCoordinateGroupModification(): void
    +handleCoordinateGroupDeletion(): void
}

class CoordinateGroup {
    -id: int
    -label: String
    -timestamp: Date
    -cartesianCoordinates: CartesianCoordinates
    -polarCoordinates: PolarCoordinates
    +getCartesianCoordinates(): CartesianCoordinates
    +setCartesianCoordinates(CartesianCoordinates cc): void
    +getPolarCoordinates(): PolarCoordinates
    +setPolarCoordinates(PolarCoordinates pc): void

}

class CartesianCoordinates {
    -x: double
    -y: double
    +getX(): double
    +getY(): double
    +setX(double x): void
    +setY(double y): void

}

class PolarCoordinates {
    -radius: double
    -angle: double
    +getRadius(): double
    +getAngle(): double
    +setRadius(double r): void
    +setAngle(double a): void

}
}

DCCController -- DCCModel : Request Data
DCCController -- DCCView : View Selection
DCCView --> DCCController : User events
DCCModel --> DCCView : Change Notification
@enduml