@startuml
package frontend {
  class UserInteraction{
    +getUserInput(): (String, CartesianCoordinates)
    +getSelectedCoordinateGroup(): CoordinateGroup
  }
}

package logic {
  class CoordinateConverter{
    +convertCartesianToPolar(CartesianCoordinates): PolarCoordinates
    +convertPolarToCartesian(PolarCoordinates): CartesianCoordinates
  }

  class CoordinateCalculator{
    +calculatePolarFromCartesian(CartesianCoordinates): PolarCoordinates
    +calculateCartesianFromPolar(PolarCoordinates): CartesianCoordinates
  }

  class CoordinateManager{
    +addCoordinateGroup(CoordinateGroup): void
    +updateCoordinateGroup(CoordinateGroup): void
    +deleteCoordinateGroup(int): void
    +getCoordinateGroups(): List<CoordinateGroup>
  }
}

package data {
  class DatabaseConnection{
    +connectToDatabase(): boolean
    +disconnectFromDatabase(): boolean
  }

  class MySQLDatabase{
    +storeCoordinateGroup(CoordinateGroup): void
    +retrieveCoordinateGroups(): List<CoordinateGroup>
  }
}

package model {
  class CoordinateGroup{
    +id: int
    +label: String
    +cartesianCoordinates: CartesianCoordinates
    +polarCoordinates: PolarCoordinates

    +__init__(int, String, CartesianCoordinates, PolarCoordinates): void
  }

  class CartesianCoordinates{
    +x: HighPrecisionNumber
    +y: HighPrecisionNumber

    +__init__(HighPrecisionNumber, HighPrecisionNumber): void
  }

  class PolarCoordinates{
    +r: HighPrecisionNumber
    +theta: HighPrecisionNumber

    +__init__(HighPrecisionNumber, HighPrecisionNumber): void
  }
}

frontend -> logic: Uses
logic -> data: Accesses
data -> model: Uses
model -> data: Has-a
@enduml