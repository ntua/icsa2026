@startuml

!define ClassBorderColor Black
skinparam linetype polyline
skinparam componentStereotypePosition top,4
skinparam sequenceMessageFontColor DarkBlue
skinparam sequenceActorBorderRoundCorner 10
skinparam class {
    BackgroundColor White
    BorderColor Black
    BorderRoundCorner 5
}

package "Frontend" <<rect>> {
  class UserInterface {
    - currentCoordinateGroup : CoordinateGroup
    + setCartesianCoordinates(x: float, y: float) : void
    + setPolarCoordinates(r: float, theta: float) : void
    + getCoordinateGroupLabel() : String
    + addCoordinateGroup() : void
    + updateCoordinateGroup(id: int) : void
    + deleteCoordinateGroup(id: int) : void
  }
}

package "Logic" <<rect>> {

  class CoordinateConversionManager {
    - cartesianToPolarConverter : CartesianToPolarConverter
    - polarToCartesianConverter : PolarToCartesianConverter
    
    + convertCartesianToPolar(x: float, y: float) : Pair<float, float>
    + convertPolarToCartesian(r: float, theta: float) : Pair<float, float>
  }

  class CoordinateGroup {
    * id : int
    - label : String
    - cartesianCoordinates : CartesianCoordinates
    - polarCoordinates : PolarCoordinates

    + getLabel() : String
    + setLabel(label: String) : void
    + calculateCartesianCoordinates() : void 
    + calculatePolarCoordinates() : void
  }

  class Coordinates {
      - x : float
      - y : float

      + asList(): List<float> 
  }
}


package "Data" <<rect>> {
  class CoordinateGroupDatabase {
   + saveCoordinateGroup(coordinateGroup: CoordinateGroup) : int
   + getCoordinateGroups() : List<CoordinateGroup> 
   + updateCoordinateGroup(id: int, updatedGroup: CoordinateGroup) : void  
   + deleteCoordinateGroup(id: int) : void  
  }
}


UserInterface .. CoordinateConversionManager
UserInterface .. CoordinateGroupDatabase
UserInterface .. CoordinateGroup
Coordinates <.. CartesianCoordinates
Coordinates <.. PolarCoordinates
CoordinateConversionManager <.. CartesianToPolarConverter 
CoordinateConversionManager <.. PolarToCartesianConverter 


@enduml