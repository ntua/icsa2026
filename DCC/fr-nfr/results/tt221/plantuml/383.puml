@startuml
class Database {
    -connectionDetails() : string
}

class  Logic {
  -cartesianCoordinates : Pair<Double, Double>
  -polarCoordinates : Pair<Double, Double>

}

    
class Data {
    +coordinateGroupRepository() : interface
}


interface CoordinateGroupRepository {
  +create(coordinateGroup: CoordinateGroup) : void
  +read() : List<CoordinateGroup>
  +update(id: int, coordinateGroup: CoordinateGroup) : void
  +delete(id: int) : void
}
  
class DataAccessObject {
    -databaseConnection [composition]
}
  

interface CoordinateConverter {
  +cartesianToPolar(coordinates: Pair<Double, Double>) : Pair<Double, Double>
  +polarToCartesian(coordinates: Pair<Double, Double>) : Pair<Double, Double>
}
  
class CoordinateConverterImpl implements CoordinateConverter {
    -cartesianCoordinates : Pair<Double, Double>
    -polarCoordinates : Pair<Double, Double>
    
  coordinateConverterImplementation(coordinates: Pair<Double, Double>) : (Pair<Double, Double>, Pair<Double, Double>)
}
  
class CoordinateGroup {
    +id : int
    +label : String
    +cartesianCoordinates : List<Pair<Double, Double>>
    +polarCoordinates : List<Pair<Double, Double>>
    
}
  

CoordinateConverterImpl -- DataAccessObject

@enduml