@startuml
package presentation {
  class DCCGUI {
    +displayCoordinateGroups()
    +handleUserActions()
  }
}

package logic {
  class CoordinateGroup {
    -id: int
    -label: String
    -cartesianX: double
    -cartesianY: double
    -polarR: double
    -polarTheta: double
    +CoordinateGroup(label: String, cartesianX: double, cartesianY: double)
    +CoordinateGroup(label: String, polarR: double, polarTheta: double)
    +toCartesian(): void
    +toPolar(): void
  }

  class CoordinateConverter {
    +cartesianToPolar(x: double, y: double): (double, double)
    +polarToCartesian(r: double, theta: double): (double, double)
  }

}

package data {
  class DatabaseManager {
    -connectionString: String
    +createCoordinateGroup(coordinateGroup: CoordinateGroup): void
    +readCoordinateGroups(): List<CoordinateGroup>
    +updateCoordinateGroup(coordinateGroup: CoordinateGroup): void
    +deleteCoordinateGroup(id: int): void
  }

}

DCCGUI "1" -- "*" CoordinateGroup : uses
CoordinateGroup "*" -- "1" CoordinateConverter : uses
DatabaseManager "1" -- "*" CoordinateGroup : manages


@enduml