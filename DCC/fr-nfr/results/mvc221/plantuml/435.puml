@startuml
title Dummy Coordination Conversion Application - Class Diagram

package "Frontend" {
  class DCCView {
    + displayCoordinateGroups()
    + getUserInput()
    + applyFilter(label: String)
    + clearFilter()
    + refreshList()
  }

  class SwingGUI {
    * createUI()
  }
}


package "Logic" {
  class CartesianConverter {
    + toPolarCoordinates(x: Double, y: Double): PolarCoordinates
    + fromPolarCoordinates(r: Double, theta: Double): CartesianCoordinates
  }
  
  class PolarConverter {
    + toCartesianCoordinates(r: Double, theta: Double): CartesianCoordinates
    + fromCartesianCoordinates(x: Double, y: Double): PolarCoordinates
  }

  class CoordinateGroupManager {
    * createCoordinateGroup()
    * updateCoordinateGroup()
    * deleteCoordinateGroup()
    * readCoordinateGroups(): List<CoordinateGroup>
    * filterCoordinateGroups(label: String): List<CoordinateGroup>
  }
}

package "Data" {
  class DatabaseConnection {
    * connectToDatabase()
    * disconnectFromDatabase()

    - dbClient: MySQLClient
  }

  class MySQLClient {
    + saveData(data: CoordinateGroup)
    + fetchData(query: String): List<CoordinateGroup>
    + updateData(id: Integer, data: CoordinateGroup)
    + deleteData(id: Integer)
  }

class CartesianCoordinates {
  * x: Double
  * y: Double
}

class PolarCoordinates {
  * r: Double
  * theta: Double
}

class CoordinateGroup {
  - id: Integer
  - label: String
  - cartesian: CartesianCoordinates
  - polar: PolarCoordinates
}
}


DCCView <|.. SwingGUI
DCCView ..> CoordinateGroupManager : uses
CoordinateGroupManager ..> DatabaseConnection : uses
DatabaseConnection ..|> MySQLClient

@enduml