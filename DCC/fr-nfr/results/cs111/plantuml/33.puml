@startuml
title Dummy Coordination Conversion Application - Class Diagram
skinparam componentStereoColor LightGray
skinparam stereotypeMargin 3
skinparam linetype polyline
skinparam classAttributeIconPosition bottom

package "Frontend [Client]" {
    class DCCApplication {
        + createCoordinateGroup(cartesian: Cartesian, polar: Polar) : CoordinateGroup
        + storeCoordinateGroup(group: CoordinateGroup) : int
        + retrieveCoordinateGroup(label: String) : List<CoordinateGroup>
        + modifyCoordinateGroup(group: CoordinateGroup) : void
        + deleteCoordinateGroup(id: int) : void
    }

    class Cartesian {
        - x: double
        - y: double
    }

    class Polar {
        - r: double
        - theta: double
    }

    class CoordinateGroup {
        * id: int
        * label: String
        * timestamp: Date

        + convertToCartesian() : Cartesian
        + convertToPolar() : Polar
    }
}

package "Backend [Server]" {
    class MySQLDatabase{
        - storeData(data: String) : void
        - fetchData(query: String) : List<String>
    }

    class CoordinateGroupStorage {
        + storeCoordinateGroup(group: CoordinateGroup, conn: Connection) : int
        + retrieveCoordinateGroup(label: String, conn: Connection) : List<CoordinateGroup>
        + deleteCoordinateGroup(id: int, conn: Connection) : void

        # TCP/IP connection for communication with the database
    }
}

DCCApplication .. CoordinateGroupStorage : Uses (TCP/IP)
@enduml